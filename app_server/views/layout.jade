
doctype html
html(ng-app='xmapp')
    nav.navbar.navbar-default(ng-controller="navBarCtrl")
      .container-fluid
        .navbar-header
          a.brandcl.navbar-brand(href='#')
            img(alt='Brand', src="/images/xiaomiantiaos.png")
          ul.nav.navbar-nav
           li(ng-class="{active: Fact.activeTab == 'Home'}")
              a(href="/") Home
           li(ng-class="{active: Fact.activeTab == 'Search'}")
              a(href="/results/") Search
            li(ng-class="{active: Fact.activeTab == 'About'}")
               a(href="/about/") About


    head
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title=title
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        
    body
      .container
          block content
          
          script(src='/javascripts/jquery.min.js')
          script(src='/angular/angular.min.js')
          script(src='/angular/ui-bootstrap-tpls-2.5.0.min.js')
          script(src='/angular/xm.js')
          script(src='/bootstrap/js/bootstrap.min.js')    
